<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="51dp"
    android:id="@+id/llout"
    android:orientation="horizontal"
    android:paddingLeft="20dp"
    android:paddingRight="10dp"
    android:background="?selectableItemBackground"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_weight="0"
        android:layout_marginRight="15dp"
        android:layout_gravity="center_vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_user_list_profile"
            android:layout_width="58dp"
            android:src="@drawable/avatar"
            android:layout_height="58dp"
            android:layout_gravity="center_vertical"/>



    </RelativeLayout>

    <TextView
        android:id="@+id/text_user_list_nickname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="user name"
        android:layout_gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="?maintextColor"/>

    <RelativeLayout
        android:id="@+id/relative_layout_blocked_by_me"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="0">

        <TextView
            android:id="@+id/text_view_blocked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="11.5sp"
            android:textColor="#bcbfc7"
            android:text="Blocked"
            android:layout_marginLeft="10dp"/>



    </RelativeLayout>

</LinearLayout>