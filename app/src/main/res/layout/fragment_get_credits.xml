<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:auto="http://schemas.android.com/tools"
    android:background="?screen_view_background"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_marginStart="@dimen/dp_16"
android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_12"
        app:cardBackgroundColor="?recyclerview_item_background_color"
        app:cardCornerRadius="@dimen/dp_12"
        app:contentPadding="@dimen/dp_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?screen_view_background"
        android:orientation="vertical"
        android:padding="@dimen/dp_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal"
            android:padding="@dimen/dp_8">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:text="Show "
                android:textColor="?maintextColor"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/showTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:text="Shows "
                android:textColor="?maintextColor"
                android:textSize="@dimen/sp_14"
                android:textStyle="italic" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal"
            android:padding="@dimen/dp_8">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:text="Date "
                android:textColor="?maintextColor"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/showDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:text="xxxx "
                android:textColor="?maintextColor"
                android:textSize="@dimen/sp_14"
                android:textStyle="italic" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal"
            android:padding="@dimen/dp_8">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:text="Cost "
                android:textColor="?maintextColor"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/showCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:text="3 Link Ticks "
                android:textColor="?maintextColor"
                android:textSize="@dimen/sp_14"
                android:textStyle="italic" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal"
            android:padding="@dimen/dp_8">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:text="Show By "
                android:textColor="?maintextColor"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/showOwner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:text="xxxx "
                android:textColor="?maintextColor"
                android:textSize="@dimen/sp_14"
                android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>

    </androidx.cardview.widget.CardView>
<!--
    <Button
        android:id="@+id/btnPay"
        android:text="Pay Using Credits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>-->


    <com.google.android.material.button.MaterialButton

        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/btnPay"
        android:layout_marginTop="30dp"

        android:layout_marginBottom="@dimen/dp_12"
        android:text="-- Use My Link Ticks --"
        android:textColor="?maintextColor"
        app:cornerRadius="@dimen/dp_12"

        app:iconGravity="start"
        app:iconPadding="@dimen/dp_12"
        app:iconSize="@dimen/dp_18"
        app:iconTint="?maintextColor"
        app:rippleColor="?maintextColor"
        app:strokeColor="?maintextColor" />
</LinearLayout>