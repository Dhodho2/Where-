<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="@dimen/dp_8"
    android:background="?screen_view_background">


    <LinearLayout
        android:id="@+id/buttomTitleMenu"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginBottom="15dp"
        android:elevation="4dp"
        android:layout_marginTop="@dimen/dp_12"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/recyclerview"
        app:layout_constraintEnd_toEndOf="parent"
android:paddingStart="15dp"
        android:paddingEnd="@dimen/dp_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.135">

        <EditText

            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:hint="search other user to share"
            android:textColor="?maintextColor"
            android:textColorHint="?maintextColor" />

        <ImageView
            android:id="@+id/searchBtn"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_weight=".1"
            android:src="@drawable/ic_search_black_customed"
            android:visibility="visible" />

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:visibility="visible"
android:paddingStart="@dimen/dp_12"
        android:paddingEnd="@dimen/dp_12"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintTop_toTopOf="@+id/buttomTitleMenu"

        app:spanCount="4"
        tools:layout_editor_absoluteX="33dp"
        tools:listitem="@layout/share_to_names" />
<!--
    <ImageView
        android:id="@+id/back_navigation"
        android:layout_width="70dp"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_back_white_24dp"
        tools:visibility="gone" />-->

</androidx.constraintlayout.widget.ConstraintLayout>