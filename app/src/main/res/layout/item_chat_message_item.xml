<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginBottom="0dp"

    android:orientation="vertical"
    android:paddingTop="1dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_message_profile"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginLeft="8dp"
        android:src="@drawable/avatar"

        app:civ_border_color="@color/white"
        app:civ_border_width="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/NameOfPersonChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:text="Admire D. "

        android:textColor="?maintextColor"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@+id/image_message_profile"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/messageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_rectangle"
        android:maxWidth="240dp"
        android:padding="8dp"

        android:text=" This is a message for wena ?"
        android:textColor="?maintextColor"
        android:visibility="visible"
        app:layout_constraintLeft_toRightOf="@+id/image_message_profile"
        app:layout_constraintTop_toBottomOf="@+id/NameOfPersonChat" />

    <TextView
        android:id="@+id/messageTextMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_rectangle"

        android:maxWidth="240dp"
        android:padding="8dp"
        android:text=" This is a message for wena ?"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        android:paddingEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/messageTextMe">

        <TextView
            android:id="@+id/comment_Seen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="5dp"
            android:text="Seen"
            android:textColor="@color/dark_blue"
            android:textSize="10sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/comment_datedME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:paddingStart="12dp"
            android:text="11:40"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:visibility="gone" />


    </LinearLayout>


    <TextView
        android:id="@+id/comment_dated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="11:40"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/messageText"
        app:layout_constraintLeft_toRightOf="@+id/messageText" />

    <ImageView
        android:id="@+id/loading_status"
        android:layout_width="16dp"
        android:layout_height="14dp"
        android:layout_marginTop="7dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/messageText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_message_profile"
        app:srcCompat="@drawable/ic_cancel_purple_600_24dp" />

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toStartOf="@+id/messageText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loading_status" />

</androidx.constraintlayout.widget.ConstraintLayout>