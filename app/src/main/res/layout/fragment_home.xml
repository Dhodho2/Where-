<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swiperootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?screen_view_background"
    android:keepScreenOn="true">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?screen_view_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?screen_view_background"
            android:orientation="vertical"
            android:padding="14dp"
            android:paddingStart="@dimen/dp_8"
            android:paddingTop="@dimen/dp_14"
            android:paddingEnd="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_14"
            tools:context=".fragments.HomeFragment">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_View_accounts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_8"
                android:paddingEnd="@dimen/dp_8"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="7"
                tools:listitem="@layout/accounts_feed_items" />


            <com.allattentionhere.autoplayvideos.AAH_CustomRecyclerView
                android:id="@+id/recycler_View_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

                tools:itemCount="7"
                tools:listitem="@layout/feed_item" />

            <View

                android:layout_width="match_parent"
                android:layout_height="220dp" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
