<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="1dp"

    android:layout_marginBottom="0dp"

    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_message_profile"
        android:layout_width="32dp"
        android:layout_height="32dp"

        android:layout_marginLeft="8dp"
        android:src="@drawable/avatar"
        app:civ_border_color="@color/white"
        app:civ_border_width="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/NameOfPersonChat"
        android:text="Admire D. "
        android:textColor="?maintextColorPrimaryColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textStyle="bold"

        app:layout_constraintLeft_toRightOf="@+id/image_message_profile"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/commentText"
        android:text="hi?"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="240dp"
        android:padding="8dp"

        android:textColor="@color/white"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/NameOfPersonChat"
        app:layout_constraintLeft_toRightOf="@+id/image_message_profile"
        android:layout_marginLeft="8dp" />


    <TextView
        android:id="@+id/comment_dated"
        android:text="11:40"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@+id/commentText"
        android:layout_marginLeft="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/commentText" />

    <ImageView
        android:id="@+id/loading_status"
        android:layout_width="16dp"
        android:layout_height="14dp"
        android:layout_marginTop="7dp"
        app:layout_constraintEnd_toStartOf="@+id/commentText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_message_profile"
        app:srcCompat="@drawable/ic_cancel_purple_600_24dp" />
    <View

        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toStartOf="@+id/commentText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loading_status"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>