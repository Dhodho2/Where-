<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:pv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:animateLayoutChanges="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.SplashScreen"

    >

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <me.wangyuwei.particleview.ParticleView
            android:id="@+id/pv_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="@color/white"
            pv:pv_host_text="Where@"
            pv:pv_host_text_size="@dimen/sp_34"
            pv:pv_particle_text="Africa TV"
            pv:pv_particle_text_size="@dimen/sp_36"
            pv:pv_text_color="@color/colorPrimary"
            pv:pv_background_color="#FFF"/>

        <LinearLayout
            android:visibility="invisible"
            android:id="@+id/splashLoading"
            android:gravity="bottom|center"
            android:layout_marginBottom="80dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <ProgressBar xmlns:tools="http://schemas.android.com/tools"
                android:visibility="invisible"
                android:id="@+id/realLoadigimg"
                tools:visibility="visible"
                android:layout_width="40dp"
                android:indeterminate="true"
                android:layout_gravity="center"
                style="?android:attr/progressBarStyleLarge"

                android:theme="@style/ProgressBarStyle_spash"
                android:layout_height="match_parent" />

            <TextView
android:gravity="center"
                android:id="@+id/realLoadigtxt"
                android:visibility="invisible"
                tools:visibility="visible"
                android:textSize="@dimen/sp_14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/loading"
android:textColor="@color/colorPrimary"

                />
        </LinearLayout>

        <ImageView

            android:layout_width="100dp"
            app:srcCompat="@drawable/ic_main_icon"
            android:visibility="invisible"
            android:id="@+id/stamp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="119dp"
            android:layout_height="100dp" />


    </RelativeLayout>
</FrameLayout>