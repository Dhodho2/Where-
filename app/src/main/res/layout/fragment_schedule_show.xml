<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?screen_view_background"
    android:padding="@dimen/dp_12">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColorHint="?maintextColor"
                app:boxBackgroundColor="?recyclerview_item_background_color"
                app:boxStrokeColor="?maintextColor"
                app:errorEnabled="true"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                app:hintTextColor="?maintextColor">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/postTitlee"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint="Post Title"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"
                    android:singleLine="true"
                    android:textColor="?maintextColor"
                    android:textColorHint="?maintextColor" />
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/date_of_show"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="2dp"
                android:layout_weight=".5"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_12"
                android:text="Set Date"
                android:textColor="?maintextColor"
                app:cornerRadius="@dimen/dp_12"

                app:icon="@drawable/ic_date_range_black_24dp"
                app:iconGravity="start"
                app:iconPadding="@dimen/dp_12"
                app:iconSize="@dimen/dp_18"
                app:iconTint="?maintextColor"
                app:rippleColor="?maintextColor"
                app:strokeColor="?maintextColor" />



        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColorHint="?maintextColor"
                app:boxBackgroundColor="?recyclerview_item_background_color"
                app:boxStrokeColor="?maintextColor"
                app:errorEnabled="true"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                app:hintTextColor="?maintextColor">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/postPriceAmount"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint="price-charge"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:textColor="?maintextColor"
                    android:textColorHint="?maintextColor" />
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="22dp"
                android:layout_weight=".5"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_12"
                android:text="Start Time"
                android:textColor="?maintextColor"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="22dp"
                android:layout_weight=".5"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_12"
                android:text="End Time"
                android:textColor="?maintextColor"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/start_time"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="2dp"
                android:layout_weight=".5"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_12"
                android:text="Start Time"
                android:textColor="?maintextColor"
                app:cornerRadius="@dimen/dp_12"

                app:icon="@drawable/ic_clock_24dp"
                app:iconGravity="start"
                app:iconPadding="@dimen/dp_12"
                app:iconSize="@dimen/dp_18"
                app:iconTint="?maintextColor"
                app:rippleColor="?maintextColor"
                app:strokeColor="?maintextColor" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/end_time"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="2dp"
                android:layout_weight=".5"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_12"
                android:text="End Time"
                android:textColor="?maintextColor"
                app:cornerRadius="@dimen/dp_12"

                app:icon="@drawable/ic_clock_24dp"
                app:iconGravity="start"
                app:iconPadding="@dimen/dp_12"
                app:iconSize="@dimen/dp_18"
                app:iconTint="?maintextColor"
                app:rippleColor="?maintextColor"
                app:strokeColor="?maintextColor" />

        </LinearLayout>

        <TextView
            android:layout_marginTop="@dimen/dp_12"
            android:layout_width="match_parent"
            android:textSize="@dimen/dp_12"
            android:textColor="?maintextColor"
            android:text="Select Image"
            android:layout_height="wrap_content"/>
<ImageView
    android:layout_marginTop="@dimen/dp_12"
    android:id="@+id/image_thumbnail"
    android:background="@drawable/feed_item_design"
    android:padding="@dimen/dp_16"
    android:layout_gravity="center"
    android:src="@drawable/ic_main_icon"
    android:layout_width="wrap_content"
    android:minHeight="120dp"
    android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/save"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_12"
            android:text="Submit Schedule"
            android:textColor="?maintextColor"
            app:cornerRadius="@dimen/dp_12"


            app:iconGravity="start"
            app:iconPadding="@dimen/dp_12"
            app:iconSize="@dimen/dp_32"
            app:iconTint="?maintextColor"
            app:rippleColor="?maintextColor"
            app:strokeColor="?maintextColor" />

    </LinearLayout>

</ScrollView>